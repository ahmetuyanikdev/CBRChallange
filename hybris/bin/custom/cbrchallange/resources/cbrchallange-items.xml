<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">
	<collectiontypes>

	</collectiontypes>

	<enumtypes>
		<enumtype code="FeedbackPriorityEnum" autocreate="true" generate="true">
			<value code="CRITICAL" />
			<value code="HIGH"/>
			<value code="MODERATE"/>
			<value code="LOW"/>
		</enumtype>
	</enumtypes>

	<relations>
		<relation code="Customer2CustomerFeedBackRel" localized="false" autocreate="true" generate="true">
			<sourceElement type="Customer" qualifier="customer" cardinality="one"/>
			<targetElement type="CustomerFeedbackReview" qualifier="reviews" cardinality="many"/>
		</relation>
	</relations>

	<itemtypes>

		<!-- Add your item definitions here -->

		<!-- TypeGroups are for structure of this file only -->

		<typegroup name="CRM">
			<itemtype code="CustomerFeedbackReview"
					  autocreate="true" generate="true"
					  extends="GenericItem"
					  jaloclass="com.cbrchallenge.core.jalo.CustomerFeedbackReview">
				<deployment table="CustomerFeedbackReview" typecode="11001"/>
				<attributes>
					<attribute qualifier="code" type="java.lang.String">
						<persistence type="property"/>
						<modifiers unique="true"/>
					</attribute>
					<attribute qualifier="explanation" type="java.lang.String">
						<description>Explanation of review</description>
						<modifiers/>
						<persistence type="property"/>
					</attribute>
					<attribute qualifier="priority" type="FeedbackPriorityEnum">
						<modifiers/>
						<persistence type="property"/>
					</attribute>
					<attribute qualifier="issueDate" type="java.util.Date">
						<modifiers search="true"/>
						<persistence type="property"/>
					</attribute>
				</attributes>
			</itemtype>
		</typegroup>

	</itemtypes>

</items>
